<h1> All Events </h1>
<table class="table table-hover">
		<thead>
			<tr> 
				<th> Event Name </th>
				<th> Event Details </th>
			</tr> 
		</thead>
		<tbody>
			<% @events.each do |event| %>
				<tr>
					<td> <%= event.name %> </td>
					<td> <%= link_to 'View Details', event_path(event.id) %> </td>
				</tr>
			<% end %>
		</tbody>
</table> 